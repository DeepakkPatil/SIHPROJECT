<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_poem"
    tools:context=".relaxingActivityKids">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif1"
        android:layout_width="800dp"
        android:layout_height="270dp"
        android:layout_marginTop="-25dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:src="@drawable/chidiya"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/head"
        android:layout_below="@+id/gif1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="10dp"
                >
                <ImageButton
                    android:id="@+id/button1"
                    android:layout_width="180dp"
                    android:layout_height="180dp"

                    android:scaleType="fitXY"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/btn1"
                   android:layout_gravity="start"
                    android:layout_weight="1"

                    android:background="@drawable/shape"
                    />
                <ImageButton
                    android:layout_gravity="end"

                    android:scaleType="fitXY"
                    android:id="@+id/button2"
                    android:layout_margin="10dp"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:src="@drawable/btn2"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="10dp"
                >
                <ImageButton
                    android:id="@+id/button3"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    app:srcCompat="@drawable/btn3"
                    android:layout_gravity="start"
                    android:layout_weight="1"

                    android:scaleType="fitXY"
                    android:layout_margin="10dp"

                    android:background="@drawable/shape"
                    />
                <ImageButton
                    android:layout_gravity="end"
                    android:id="@+id/button4"
                    android:layout_margin="10dp"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:src="@drawable/btn4"

                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="10dp"
                >
                <ImageButton
                    android:id="@+id/button5"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    app:srcCompat="@drawable/btn5"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape"
                    />
                <ImageButton
                    android:id="@+id/button6"
                    android:layout_width="180dp"
                    android:layout_height="180dp"

                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/btn6"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>