<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:background="@drawable/bluess"
    tools:context=".chekk">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/circularProgressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="179dp"
            android:layout_marginTop="10dp"
            android:progress="20"
            app:indicatorColor="@color/yellow"
            app:indicatorSize="170dp"
            app:trackColor="@color/white"
            app:trackThickness="20dp" />

        <TextView
            android:id="@+id/showCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-150dp"
            android:fontFamily="@font/salsa"
            android:text="0000"
            android:textAlignment="center"
            android:textColor="#DCFFFFFF"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/showCalories"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/salsa"
            android:text="Calories left"
            android:textAlignment="center"
            android:textColor="#E6FFFFFF"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/search"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:hint="Enter food item here"
                android:padding="8dp"

                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <Button
                android:id="@+id/searchbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search"
                android:drawableEnd="@drawable/ic_baseline_search_24"
                android:fontFamily="@font/salsa"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="search"
                android:textColor="@color/black"
                app:backgroundTint="@color/yellow"
                app:cornerRadius="80dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerv"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/searchbtn"

            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginTop="-100dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/diet_show"
            android:layout_width="193dp"
            android:layout_height="46dp"
            android:layout_below="@id/ll"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:hint="Calorie Consumed"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <Button
            android:id="@+id/diet_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:fontFamily="@font/salsa"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:backgroundTint="@null" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:layout_marginTop="10dp"
        android:id="@+id/tvv"
        android:text="For Diet Click here"
        android:textAlignment="center"
        android:background="@color/white"
        android:textColor="#AE000000"
        android:fontFamily="@font/salsa"
        android:textSize="20dp"
        android:padding="3dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_below="@id/ll2"
        android:translationZ="-10dp"
        android:background="@drawable/img_5" />

    <Button
        android:id="@+id/diet_diet"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_below="@id/ll2"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="4dp"
        android:visibility="invisible" />


</RelativeLayout>